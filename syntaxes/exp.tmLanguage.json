{
  "scopeName": "source.exp",

  "patterns": [
    {
      "include": "#home"
    }
  ],

  "repository": {
    "home": {
      "match": "",
      "patterns": [
        {
          "include": "text.html.exp"
        }
      ]
    },
    "exp-tag": {
      "patterns": [
        {
          "begin": "<\\?(?i:exp)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.exp"
            }
          },
          "end": "(\\?)>",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.exp"
            },
            "1": {
              "name": "source.exp"
            }
          },
          "name": "meta.embedded.block.exp",
          "contentName": "source.exp",
          "patterns": [
            {
              "include": "#expressor"
            }
          ]
        },
        {
          "begin": "<\\?(?i:e=)",
          "beginCaptures": {
            "0": {
              "name": "punctuation.section.embedded.begin.exp"
            }
          },
          "end": "(\\?)>",
          "endCaptures": {
            "0": {
              "name": "punctuation.section.embedded.end.exp"
            },
            "1": {
              "name": "source.exp"
            }
          },
          "name": "meta.embedded.line.exp",
          "contentName": "source.exp",
          "patterns": [
            {
              "include": "#expressor"
            }
          ]
        }
      ]
    },
    "expressor": {
      "begin": "(?=<\\?(?i:exp|e=))",
      "end": "(?=(\\?)>)",
      "patterns": [
        {
          "include": "source.exp.js"
        }
      ]
    }
  }
}
